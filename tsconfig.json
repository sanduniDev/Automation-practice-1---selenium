{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "types": ["node", "vitest/globals"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["e2e/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
