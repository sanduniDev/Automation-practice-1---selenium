{
  "name": "orangehrm-selenium-automation",
  "version": "1.0.0",
  "description": "Comprehensive E2E automation tests for OrangeHRM application using Selenium WebDriver and Vitest",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:login": "vitest run e2e/tests/login.test.ts",
    "test:dashboard": "vitest run e2e/tests/dashboard.test.ts",
    "test:admin": "vitest run e2e/tests/admin.test.ts",
    "test:pim": "vitest run e2e/tests/pim.test.ts",
    "test:leave": "vitest run e2e/tests/leave.test.ts",
    "test:time": "vitest run e2e/tests/time.test.ts",
    "test:recruitment": "vitest run e2e/tests/recruitment.test.ts",
    "test:myinfo": "vitest run e2e/tests/myinfo.test.ts",
    "test:headless": "HEADLESS=true vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist node_modules coverage"
  },
  "keywords": [
    "selenium",
    "webdriver",
    "automation",
    "testing",
    "e2e",
    "orangehrm",
    "vitest",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/selenium-webdriver": "^4.35.4",
    "@vitest/ui": "^1.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "selenium-webdriver": "^4.16.0"
  }
}
